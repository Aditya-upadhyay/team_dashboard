<!DOCTYPE html>
<html ng-app="TeamDashboard">
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Team Dashboard" %></title>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>

    <%= csrf_meta_tag %>

    <%= yield(:head) %>

  </head>

  <body ng-controller="MainCtrl">

    <div class="navbar navbar-static-top">
     <div class="navbar-inner">
       <div class="container">
         <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
         </a>
         <a class="brand" href="/">Team Dashboard</a>
         <div class="nav-collapse">
           <ul class="nav">
             <li><a href="/dashboards">Dashboards</a></li>
             <li><a href="/about">About</a></li>
           </ul>
         </div><!--/.nav-collapse -->
       </div>
     </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
          <div id="flash"></div>
      </div>
      <div class="row-fluid">
        <div id="main" class="span12">
          <ng-view></ng-view>
        </div>
      </div>
    </div>

    <div id="fullscreen-notification" class="text-modal fade hide">
      <h1>Press ESC to exit fullscreen.</h1>
    </div>

    <%= script_tag_for_all_templates %>
    <%= script_tag_for_all_custom_fields %>

    <script>
      (function($) {
        $.Sources = JSON.parse('<%= raw Sources.sources.to_json %>');
        $.available_widgets = JSON.parse('<%= raw Widget.list_available %>');
      })($);
    </script>

  </body>

</html>